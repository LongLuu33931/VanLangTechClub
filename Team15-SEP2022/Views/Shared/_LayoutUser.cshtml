@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Area/assets/images/logo-vanlangtech.png" type="image/x-icon" />
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Area/user/lib/animate/animate.min.css" rel="stylesheet" />
    <link href="~/Area/user/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Area/user/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Area/user/css/user.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/Area/user/css/style.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <div class="container-fluid nav-bar bg-transparent">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 p-4">
                <a href=@Url.Action("Index") class="navbar-brand d-flex align-items-center text-center">
                    <div class="me-2">
                        <img class="logo-h-m" src="~/Area/user/img/logo-vanlangtech.png" alt="Icon" />
                        <span class="header-text">Văn Lang Tech Club</span>
                    </div>

                </a>

                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto">
                        <a href=@Url.Action("Index") class="nav-item nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active":"")">Trang chủ</a>
                        <a href=@Url.Action("SuKien") class="nav-item nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "SuKien" ? "active":"")">Sự kiện</a>
                        @Html.Partial("_LoginPartial", new { @class = "" })
                    </div>
                    @*<a href="" class="btn btn-primary px-3 d-lg-flex btn-hung">Đăng nhập</a>*@
                </div>
            </nav>
        </div>
        <!-- Navbar End -->
        <!-- Header Start -->
        <div class="container-fluid header bg-white p-0 pannel-bg-pos">
            <div>
            </div>
            <img src="~/Area/user/img/dai-hoc-van-lang-4-1.png">
        </div>
        <!-- Header End -->
        <!-- Content Start -->
        @RenderBody()

        @{Html.RenderAction("Login", "Account"); }

        <!-- Content End -->
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn " data-wow-delay="0.1s">
            <div class="container">
                <div class="row g-5 px-5">
                    <div class="col-lg-3 col-md-4 d-flex flex-column" style="height: 50%;">

                        <a href=@Url.Action("Index") class="navbar-brand d-flex align-items-center text-center">
                            <div class="me-2">
                                <img class="logo-h-m" src="~/Area/user/img/logo-vanlangtech.png" alt="Icon" />
                                <span class="header-text text-white">Văn Lang Tech Club</span>
                            </div>
                        </a>

                        <div class="d-flex mt-4">
                            <a class="m-auto">
                                <div>
                                    <img src="~/Area/user/img/logo-khoa.png" alt="Icon" style="width: 80px; height: 80px; border-radius: 50%;">
                                </div>
                            </a>
                            <a class="m-auto">
                                <div>
                                    <img src="~/Area/user/img/logo-khongchu.png" alt="Icon" style="width: 100px; height: 100px;">
                                </div>
                            </a>
                        </div>

                    </div>
                    <div class="col-lg-3 col-md-3">
                        <h5 class="text-white mb-4">Liên Kết</h5>
                        <a class="btn btn-link text-white-50" href=@Url.Action("SuKien","Home")>Sự Kiện</a>
                        <a class="btn btn-link text-white-50" href=@Url.Action("LichSuDKSuKien","Home")>Lịch Sử Đăng Ký Sự Kiện</a>
                    </div>
                    <div class="col-lg-6 col-md-5">
                        <h5 class="text-white mb-4">Liên Hệ</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Cơ sở chính: 69/68 Đặng Thùy Trâm, P. 13, Q. Bình Thạnh, TP. HCM</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>vlu.techclub@gmail.com</p>

                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="footer-social py-2">
                            <a class="btn btn-outline-light btn-social btn-facebook" href="https://www.facebook.com/vlutech/" target="_blank"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-instagram"></i></a>
                            <a class="btn btn-outline-light btn-social btn-tiktok" href=""><i class="fab fa-tiktok"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer End -->
        <!-- Back to Top -->

        @Html.Partial("_Spinner")
        <div id="backToTop" class="btn-back-to-top" style="display: none"> 
            <button type="button" class="btn btn-lg btn-primary btn-lg-square"><i class="bi bi-arrow-up"></i></button>
        </div>
    </div>

    @if (Request.IsAuthenticated && ViewBag.InfoUser != null && !User.IsInRole("Admin"))
    {
        Html.RenderAction("UpdateInformation", "Home");
        Html.RenderAction("ArchiveDetailUser", "Home");
    }


    @if (ViewBag.InfoUser == null && Request.IsAuthenticated && !User.IsInRole("Admin"))
    {
        Html.RenderAction("InsertInformation", "Home");
    }

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <!-- JavaScript Libraries -->

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Area/user/lib/wow/wow.min.js"></script>
    <script src="~/Area/user/lib/easing/easing.min.js"></script>
    <script src="~/Area/user/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Area/user/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Area/user/js/main.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript">
        $("#tag-a-archive").on("click", function () {
            $("#archivementDetailUser").modal("show");
        })

        $("#SemestersId").on("change", function () {
            $("#changeSemester").submit();
        })

        $("#SchoolYearId").on("change", function () {
            $("#binding-form").submit();
        })

        $("#btn-modal-login").on("click", function () {
            $("#login").modal("show");
        })

        $("#btn-hide-login").on("click", function () {
            $("#login").modal("hide");
        })

        $("#backToTop").on("click", function () {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        })

        window.onscroll = function () {
            if (document.body.scrollTop > 120 || document.documentElement.scrollTop > 120) {
                $("#backToTop").css("display", "block");
            } else {
                $("#backToTop").css("display", "none");
            }
        }

        //window.on("scroll", function () {
        //    scrollFunction();
        //})

        //function scrollFunction() {
        //    
        //}

        //btnBckToTop.on("click", function () {
        //    alert("DemobtnBckToTop")
        //})

        //// When the user clicks on the button, scroll to the top of the document
        
    </script>
</body>
</html>
